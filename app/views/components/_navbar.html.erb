<div class="navigation-bar"> <!-- Navbar links -->
  <div class="logo">
    <strong> <%= link_to "The Smoothie", root_path, class: "logo" %> </strong></div>
    <div class="dropdown">
      <div onclick="toggleDropdown()" class="dropbtn">
        <%= render 'components/logo' %>
      </div>
      <div id="myDropdown" class="dropdown-content dropdown-toggle pull-right">
        <% if user_signed_in? %>
        <%#= link_to 'Order', new_flat_path  %>   <!-- link for ordering to add when done -->
        <%= link_to "Log out", destroy_user_session_path, class: "btn btn-default", data: { confirm: "Log out?" }, method: :delete %>
        <%= link_to 'Preferences form',  preferences_path, class: "btn btn-default" %>
        <% else %>
        <%= link_to 'Log in', new_user_session_path, class: "btn btn-default" %>
        <%= link_to 'Sign up', new_user_registration_path, class: "btn btn-default" %>
        <% end %>
        <%= link_to 'Smoothies', smoothies_path, class: "btn btn-default" %>
        <%= link_to 'About', page_path("about"), class: "btn btn-default" %>
      </div>
    </div>

  </div>



<script type="text/javascript">
  function toggleDropdown() {
    document.getElementById("myDropdown").classList.toggle("show");
  }
</script>
