<div class="container">
  <div class="row">

  <div class="basket col-sm-4">
    <div class='form'>
      <h3>Your Basket</h3>
      <% @order.order_items.each do |item| %>
        <% smoothie = Smoothie.find(item.smoothie_id) %>
        <p><%= item.smoothie_quantity %> <%= smoothie.name %></p>
      <% end %>
    </div>
  </div>

  <div class="checkout">
    <div class="delivery-info col-sm-4">
      <div class='form'>
        <div class="form-inputs">
          <h3>Delivery</h3>
          <%= simple_form_for :order, url: order_delivery_info_path(@order) do |f| %>
          <%= f.input :delivery_address, as: :text, autofocus: true, input_html: { autocomplete: "address" }, class: "form-control" %>
          <%= f.input :delivery_date, as: :datetime, class: "form-control" %>
        </div>
          <%= f.submit 'Confirm', class: 'btn btn-default' %>
        <% end %>
      </div>
  </div>
    <div class="payment-info col-sm-4">
      <div class="form">
        <h3>Payment</h3>
          <%= link_to 'Pay', '/pages/checkout', class: "btn btn-default" %>

      </div>
    </div>

  </div>
  </div>
</div>

