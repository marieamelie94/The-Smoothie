<div class="container">
   <h2 class="section__title">Thank you</h2>
  <div class="recap-wrapper">

    <div class=" form recap-box">
      <div class="recap-icon"> <img src="https://res.cloudinary.com/mas-cloud/image/upload/v1544107531/the-smoothie/icon_box_pink-2.png" width="48px" alt="box"> </div>
      <p><strong>Your Smoothies:</strong></p>
      <% @order.order_items.each do |item| %>
        <% next if item.smoothie_quantity == 0 %>
        <% smoothie = Smoothie.find(item.smoothie_id) %>
       <ul>
         <li><%= item.smoothie_quantity %> <%= smoothie.name %></li>
       </ul>
      <% end %>

    </div>
    <div class="form recap-box">
     <div class="recap-icon"><img src="https://res.cloudinary.com/mas-cloud/image/upload/v1544107531/the-smoothie/icon_cycle.png" alt="" width="48px"> <!-- <i class="fas fa-map-marker-alt"> --></i></div>
     <table>
      <tr>
         <td><strong>Will be delivered at:</strong></td>
         <td><%= @order.delivery_address %></td>
      </tr>
      <tr>
        <td><strong>On:</strong></td>
        <td><%= @order.delivery_date.strftime("%B %d, %Y") %></td>
      </tr>
      <tr>
        <td><strong>Time period:</strong></td>
        <td><%= @order.delivery_time_period %></td>
      </tr>
     </table>
   </div>
</div>

  <div class=" recap-bottom col-sm-12">
    <!-- <div class="home-btn">
      <%#= link_to "Home", root_path, class: "btn btn-xs btn-success" %>
    </div> -->
  </div>

</div>



