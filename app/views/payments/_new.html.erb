<%= form_tag order_payments_path(@order) do %>
  <article>
    <label class="amount">
      <span>Amount: <%= humanized_money_with_symbol(@order.total_smoothies_price) %></span>
    </label>
  </article>

  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
    data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
    data-name="My Smoothies"
    data-email="<%= current_user.email %>"
    data-description="<%= @order.smoothies_amount %> smoothies <%= humanized_money_with_symbol(@order.total_smoothies_price) %>"
    data-amount="<%= @order.total_smoothies_price_cents %>">
  </script>

<% end %>
